{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "include": [
        // "src"
        "src/main.ts"
    ],
}
